def solution(citations):
    citations.sort(reverse=True)
    
    for i in range(len(citations)):
        if i == len(citations)-1 and citations[i] >= i+1:   # 마지막 인덱스인 경우
            return i+1
        elif citations[i] >= i+1 and citations[i+1] <= i+1:
            return i+1
        
    #[6, 5, 3, 3, 0]
    #[2, 2, 1, 0]
