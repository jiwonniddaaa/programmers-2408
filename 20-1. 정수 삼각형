def solution(triangle):
    t = triangle
    
    for i in range(1, len(t)):   # triangle 전체 길이만큼 반복
        for j in range(len(t[i])):   # triangle의 i번째 리스트 길이만큼 반복
            if j == 0:
                t[i][j] += t[i-1][0]
            elif j == len(t[i])-1:
                t[i][j] += t[i-1][j-1]
            else:
                max_sum = max(t[i-1][j-1], t[i-1][j])
                t[i][j] += max_sum 
    
    answer = max(t[-1])
    return answer
