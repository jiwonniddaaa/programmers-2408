### 1차 성공 ###
def solution(n, words):
    num = 0   # num번 사람 
    time = 0   # time 번째 차례 
    lst = []   # 중복 확인용 리스트 

    for i in range(len(words)):
        # 중복 발생 or 앞사람의 마지막 글자와 뒷사람의 첫 글자가 다를 경우
        if words[i] in lst or (i > 0 and words[i-1][-1] != words[i][0]):
            if (i+1) % n == 0:
                num = n
                time = (i+1) // n
            else:
                num = (i+1) % n
                time = (i+1) // n + 1
            break  
        # 아무도 탈락하지 않은 경우
        elif i == len(words)-2:
            num = 0
            time = 0            
        lst.append(words[i])

    return [num, time]

### 코드 최적화 (1) ###
def solution(n, words):
    lst = []   # 중복 확인용 리스트 

    for i in range(len(words)):
        # 중복 발생  or  앞사람의 마지막 글자와 뒷사람의 첫 글자가 다를 경우
        if words[i] in lst or (i > 0 and words[i-1][-1] != words[i][0]):
            if (i+1) % n == 0:
                return [n, (i+1) // n]
            else:
                return [(i+1) % n, (i+1) // n + 1]
        
        lst.append(words[i])   # 중복 확인용 리스트
        
    # 아무도 탈락하지 않은 경우
    else:   
        return [0, 0]
