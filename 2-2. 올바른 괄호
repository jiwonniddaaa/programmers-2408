def solution(s):
    answer = True
    
    open = 0
    close = 0
    i = 0
    
    for i in range(i ,len(s)):
        if s[i] == "(":
            open += 1
        elif s[i] == ")":
            close+= 1
            
        if open < close:
            return False
    
    if open != close:
        answer = False
    
    return answer
