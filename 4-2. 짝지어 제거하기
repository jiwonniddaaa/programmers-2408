def solution(s):
    stack = []
    
    for char in s:
        # 스택이 비어있지 않고 스택의 마지막 요소가 현재 문자와 같은 경우
        if stack and stack[-1]==char :    
            stack.pop()
        else:
            stack.append(char)
    
    if not stack:   # 스택을 다 비운 경우 
        answer = 1
    else: answer = 0
        
    return answer
