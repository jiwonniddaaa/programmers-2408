def solution(n, computers):
    answer = 0
    visit = [False] * n
    
    def dfs(i):
        visit[i] = True
        for j in range(n):
            if computers[i][j] == 1 and not visit[j]:
                dfs(j)
    
    for i in range(n):
        if not visit[i]:
            dfs(i)
            answer += 1
    return answer
